<div class="form-group">
    
    <label>الموكل</label>
    <select name="customer" class="form-control" >
    <% customers.forEach(customer => { %>
      <% if (customer.id === lawcase.customer) { %>
        <option selected label="<%= customer.name %>" value="<%= customer.id %>">
      <% } else { %>
        <option label="<%= customer.name %>" value="<%= customer.id %>">
      <% } %>
    <% }) %>
    </select>

</div>

